<%- model_class = ChildDevelopment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:months) %></th>
      <!--
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @child_developments.each do |child_development| %>
      <tr>
        <td><%= link_to child_development.id, child_development_path(child_development) %></td>
        <td><%= child_development.name %></td>
        <td><%= child_development.months %></td>
        <!--
        <td><%=l child_development.created_at %></td>
        -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_child_development_path(child_development), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      child_development_path(child_development),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_child_development_path,
            :class => 'btn btn-primary' %>
