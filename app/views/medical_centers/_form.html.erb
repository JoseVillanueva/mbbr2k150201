<%= simple_form_for @medical_center, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@medical_center[:name]) %>
  <%= f.input :tax_identification %>
  <%= error_span(@medical_center[:tax_identification]) %>
  <%= f.input :address %>
  <%= error_span(@medical_center[:address]) %>
  <%= f.input :phone %>
  <%= error_span(@medical_center[:phone]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                medical_centers_path, :class => 'btn btn-default' %>
<% end %>
