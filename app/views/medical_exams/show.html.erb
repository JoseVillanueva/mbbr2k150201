<%- model_class = MedicalExam -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @medical_exam.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:exam_type) %>:</strong></dt>
  <dd><%= @medical_exam.exam_type %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              medical_exams_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_medical_exam_path(@medical_exam), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              medical_exam_path(@medical_exam),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
