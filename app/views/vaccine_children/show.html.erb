<%- model_class = VaccineChild -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:date_suggested) %>:</strong></dt>
  <dd><%= @vaccine_child.date_suggested %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_register) %>:</strong></dt>
  <dd><%= @vaccine_child.date_register %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dosis_vacune) %>:</strong></dt>
  <dd><%= @vaccine_child.dosis_vacune %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @vaccine_child.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight_picture) %>:</strong></dt>
  <dd><%= @vaccine_child.weight_picture %></dd>
  <dt><strong><%= model_class.human_attribute_name(:height_picture) %>:</strong></dt>
  <dd><%= @vaccine_child.height_picture %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_picture) %>:</strong></dt>
  <dd><%= @vaccine_child.type_picture %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture) %>:</strong></dt>
  <dd><%= @vaccine_child.picture %></dd>
  <dt><strong><%= model_class.human_attribute_name(:medical_center_id) %>:</strong></dt>
  <dd><%= @vaccine_child.medical_center_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vaccine_plan_id) %>:</strong></dt>
  <dd><%= @vaccine_child.vaccine_plan_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:child_id) %>:</strong></dt>
  <dd><%= @vaccine_child.child_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              vaccine_children_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vaccine_child_path(@vaccine_child), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vaccine_child_path(@vaccine_child),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
