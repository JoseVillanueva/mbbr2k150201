<%- model_class = MedicalHistory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:date_register) %>:</strong></dt>
  <dd><%= @medical_history.date_register %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @medical_history.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight_picture) %>:</strong></dt>
  <dd><%= @medical_history.weight_picture %></dd>
  <dt><strong><%= model_class.human_attribute_name(:height_picture) %>:</strong></dt>
  <dd><%= @medical_history.height_picture %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type_picture) %>:</strong></dt>
  <dd><%= @medical_history.type_picture %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture) %>:</strong></dt>
  <dd><%= @medical_history.picture %></dd>
  <dt><strong><%= model_class.human_attribute_name(:medical_insurance_id) %>:</strong></dt>
  <dd><%= @medical_history.medical_insurance_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:medical_center_id) %>:</strong></dt>
  <dd><%= @medical_history.medical_center_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:medicine_id) %>:</strong></dt>
  <dd><%= @medical_history.medicine_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:medical_exam_id) %>:</strong></dt>
  <dd><%= @medical_history.medical_exam_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:doctor_id) %>:</strong></dt>
  <dd><%= @medical_history.doctor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:child_id) %>:</strong></dt>
  <dd><%= @medical_history.child_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:health_problem_id) %>:</strong></dt>
  <dd><%= @medical_history.health_problem_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              medical_histories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_medical_history_path(@medical_history), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              medical_history_path(@medical_history),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
