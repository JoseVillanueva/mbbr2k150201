<%- model_class = Child -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:customer_name) %>:</strong></dt>
  <dd><%= @child.customer_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:blood_type_name) %>:</strong></dt>
  <dd><%= @child.blood_type_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:birth_type_name) %>:</strong></dt>
  <dd><%= @child.birth_type_name %></dd>


  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @child.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_birth) %>:</strong></dt>
  <dd><%= @child.date_of_birth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time_of_birth) %>:</strong></dt>
  <dd><%= @child.time_of_birth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @child.weight %></dd>
  <dt><strong><%= model_class.human_attribute_name(:size) %>:</strong></dt>
  <dd><%= @child.size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:idcard) %>:</strong></dt>
  <dd><%= @child.idcard %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:medical_center_name) %>:</strong></dt>
  <dd><%= @child.medical_center_name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:doctor_name) %>:</strong></dt>
  <dd><%= @child.doctor_name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:medical_insurance_name) %>:</strong></dt>
  <dd><%= @child.medical_insurance_name %></dd>


</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              children_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_child_path(@child), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              child_path(@child),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
