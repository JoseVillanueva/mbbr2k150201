<%= simple_form_for @child, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@child[:name]) %>
  <%= f.input :date_of_birth %>
  <%= error_span(@child[:date_of_birth]) %>
  <%= f.input :time_of_birth %>
  <%= error_span(@child[:time_of_birth]) %>
  <%= f.input :weight %>
  <%= error_span(@child[:weight]) %>
  <%= f.input :size %>
  <%= error_span(@child[:size]) %>
  <%= f.input :idcard %>
  <%= error_span(@child[:idcard]) %>
  <%= f.input :customer_id %>
  <%= error_span(@child[:customer_id]) %>
  <%= f.input :medical_insurance_id %>
  <%= error_span(@child[:medical_insurance_id]) %>
  <%= f.input :blood_type_id %>
  <%= error_span(@child[:blood_type_id]) %>
  <%= f.input :birth_type_id %>
  <%= error_span(@child[:birth_type_id]) %>
  <%= f.input :medical_center_id %>
  <%= error_span(@child[:medical_center_id]) %>
  <%= f.input :doctor_id %>
  <%= error_span(@child[:doctor_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                children_path, :class => 'btn btn-default' %>
<% end %>
