<%- model_class = VaccinePlan -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nmes) %></th>
      <th><%= model_class.human_attribute_name(:vaccine_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vaccine_plans.each do |vaccine_plan| %>
      <tr>
        <td><%= link_to vaccine_plan.id, vaccine_plan_path(vaccine_plan) %></td>
        <td><%= vaccine_plan.nmes %></td>
        <td><%= vaccine_plan.vaccine_id %></td>
        <td><%=l vaccine_plan.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vaccine_plan_path(vaccine_plan), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vaccine_plan_path(vaccine_plan),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vaccine_plan_path,
            :class => 'btn btn-primary' %>
